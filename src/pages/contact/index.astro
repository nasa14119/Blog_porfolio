---
import Default from "../../components/Default.astro";
import Nav from "../../components/Nav.astro";
import Footer from "../../components/Footer.astro";
import FormInput from "./components/FormInput.astro";
import BgBig from "../../assets/images/contact/layered-steps-haikei (1).svg"
---
<Default>
    <Nav/>
    <main class="h-screen relative flex justify-center items-center z-0 mb-20">
        <section class="relative z-50">
            <div class=" h-full w-full overflow-hidden px-5 hidden md:block">
                <img  class="mx-auto w-full object-cover object-center brightness-70" src="https://images.unsplash.com/photo-1552374196-c4e7ffc6e126?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80" alt="">
            </div>
            <form action="" class="Form ">
                <FormInput label="name:" id="nombre_input" name="nombre"/>
                <FormInput label="apellido:" id="apellido_input" name="apellido"/>
                <FormInput label="email:" id="email_input" name="email" type={"email"}/>
                <div class="md:h-full h-1/3 ">
                    <textarea placeholder=" leave a comment"></textarea>
                </div>
                <button class="md:w-fit  px-10 md:py-1 py-2 text-lg rounded-3xl text-neutral-300 border-neutral-200/90 border-2 md:ml-auto">Send</button>
            </form>
        </section>
        <div class="absolute inset-0 -bottom-5 hero-image z-10 md:bottom-0">
            <img src="https://picsum.photos/1000/1200" alt="" class="h-full object-center object-cover md:hidden">
            <img src={BgBig} alt="" class="md:block hidden w-full">
        </div>
    </main>
    <Footer/>
</Default>
<style>
    body{
        @apply bg-neutral-800; 
    }
    .hero-image{
        @apply brightness-50 md:brightness-100; 
    }
    section{
        @apply bg-neutral-500/80 rounded-md h-5/6 w-5/6 p-5 md:grid;
        grid-template-rows: 100%;
        grid-template-columns: 40% 60%; 
        grid-template-areas:". form"; 
    }
    .Form{
        grid-area: form; 
        @apply flex flex-col gap-y-5 w-full md:w-5/6 md:mx-auto md:gap-y-10 md:py-5 h-full justify-center text-white md:text-black; 
    }
    .Form textarea{
        @apply  bg-transparent md:border-neutral-500/90 border-2 resize-none p-5 w-full h-full caret-neutral-500 border-neutral-200 rounded-3xl md:rounded-none; 
    }
    .Form textarea::placeholder{
        @apply  text-black/50 align-middle; 
    }
    .Form textarea:focus{
        @apply  outline-none ; 
    }
</style>